{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"allowJs": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"sourceMap": true,
		"declaration": true,
		"strictNullChecks": false,
		"noUnusedLocals": true,
		"skipLibCheck": true,
		"pretty": true,
		"removeComments": true,
		"outDir": "./lib",
		"lib": ["es2017"]
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules", "test", "lib"]
}
