{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"lib": ["es2017"],
		"outDir": "./lib",
		"baseUrl": "src",
		"allowJs": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"sourceMap": true,
		"declaration": true,
		"strictNullChecks": false,
		"noUnusedLocals": true,
		"skipLibCheck": true,
		"pretty": true,
		"removeComments": true,
		"strict": false
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "test"]
}
